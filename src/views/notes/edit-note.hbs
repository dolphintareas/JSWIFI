<div class="col-md-4 mx-auto p-4">
    <div class="card">
        <div class="card-header">
            <h3>Editar tarea</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT" required>
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>

                <div class="form-group">
                    <img src="{{note.url}}" alt="Image" class="img-fluid">
                    
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>