<table class="table table-responsive table-striped  ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo</th>
            <th>Contraseña</th>
            <th>Teléfono</th>
            <th>País</th>
            <th>Creado</th>
            <th>Actualizado</th>
            <th>Rol</th>
            <th>Editar</th>
